.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.filter
{ 
  border:0;
  position:fixed;
  top:0;
  right: -100rpx;
}

.searchInput{
  position:absolute;
  top: 20rpx;
  left:80rpx;
  border:1px solid grey;
}
.list{
  padding: 200rpx 0;
}

.card {
  border: 2px solid #ffffff;
  border-radius: 5px;
  background-color: #ffffff;
  box-shadow: 4px 1px 1px #cccccc;
  margin-top: 20rpx;
  position: relative;
  top: 80rpx;
}

image{
  width:50rpx;
  height: 50rpx;
}

.time {
  float: right;
  margin-top: 170px;
  color: #ffffff;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  font-size: 12px;
}

button[plain]
{ 
  border:0;
  width: 200px;
  position:fixed;
  bottom:0;
}

.img{
 margin: 0;
 width:100rpx;
 height: 100rpx;
 border: none;
}

/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}
/*content*/
.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
}
.drawer_content {
  padding: 20rpx 40rpx;
  height: 470rpx;
  overflow-y: scroll;
}
.drawer_title{
  padding:20rpx;
  font:42rpx "microsoft yahei";
  text-align: center;
}
.line{
  border-bottom: 1px solid #f8f8f8;
}